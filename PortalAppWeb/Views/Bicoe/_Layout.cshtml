<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/modernizr", "~/bundles/jquery", "~/bundles/bootstrap", "~/bundles/jsincludes")

    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-theme.min.css" rel="stylesheet" />


    @Styles.Render("~/Content/css/styles")


    <style>
        ul li a {cursor:pointer;}
    </style>

    <script src="~/Scripts/ajaxForms.js"></script>
    <script src="~/Scripts/jquery-validation-1.13.0/dist/jquery.validate.min.js"></script>
    <script src="~/Scripts/ViewsManager/HashManager.js"></script>
    <script src="~/Scripts/gaCitrix.js?v=20150220.2"></script>
    @*------------------Google Analitics-------------------*@
    <script type="text/javascript">
        $(document).ready(function () {
            var keyGA = '@System.Configuration.ConfigurationManager.AppSettings["GoogleAnalyticsKey"]';
            var cookieDomain = '@System.Configuration.ConfigurationManager.AppSettings["GoogleAnalyticsCookieDomain"]';
            var userId = getUserGA();

            GaCitrix.Initialize(keyGA, userId, cookieDomain);
        });

        function getUserGA() {
            return '@Html.Raw(HttpUtility.JavaScriptStringEncode(ViewBag.GAId))';
        }

        function getUserOnLine() {
            return '@Html.Raw(HttpUtility.JavaScriptStringEncode(ViewBag.Username))';
        }

    </script>
    @*------------End Google Analitics Load----------------*@


    <script type="text/javascript">

        function ShowFirstPV() {
            HashManager.ShowHashPage({
                Hash: window.location.hash.substring(1)
            });
        }

    </script>
</head>
<body class="bicoe_body">
    @*<div style="height:100%;width:100%; position:absolute; top:0;left:0;background:#fff;z-index: 10000000;" id="ajaxLoadingLoad"><div class="text-center"><img title="Loading..." src="~/Content/img/ajax_loader_blue_64.gif" /></div></div>*@
    <div id="wrapper">
        <!-- Sidebar -->
        @RenderSection("sidebar", false)
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        @RenderBody()
    </div>
    <!-- /#page-content-wrapper -->
    <!-- footer -->
    <div class="container-fluid">
        <div class="row">
            <div id="footer_search" class="col-lg-8 col-md-8 col-sm-9 col-xs-12 col-lg-offset-2 col-md-offset-3 col-sm-offset-3">
            </div>
        </div>
    </div>
    <footer class="bicoe_footer">
            <div id="wrapper">
                <!-- Sidebar -->
                @RenderSection("footer", false)
                <!-- /#footer-wrapper -->
            </div>
    </footer>
    <!-- end footer -->
</body>
</html>
